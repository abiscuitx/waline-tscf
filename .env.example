# 主要环境变量
# 博客名称
SITE_NAME=
# 博客地址
SITE_URL=
#是否禁止新评论通知
DISABLE_AUTHOR_NOTIFY=false
#登录评论设置为force强制
LOGIN=
#自动生成服务端地址不正确时启用
SERVER_URL=
# 日志级别: debug, info, warn, error（未设置时生产环境error，开发环境debug）
LOG_LEVEL=
#首页显示: show=示例页面, false=404（未设置时生产环境404，开发环境示例页面）
INDEX_HTML=
#OAuth 第三方登录服务地址，可以 自建 auth 这是能让用户使用 GitHub, Twitter, Facebook, Google, 微博等第三方账户登录最简单的方式。
OAUTH_URL=https://oauth.lithub.cc
#评论成功后会向 WEBHOOK 配置的地址发送一条 POST 请求
WEBHOOK=
#Waline admin 地址
WALINE_ADMIN_MODULE_ASSET_URL=https://cdn.jsdelivr.net/npm/@waline-tscf/admin
#自定义 IP 查询库路径，默认使用内置的ip2region.db
IP2REGION_DB=
# 违禁词列表
FORBIDDEN_WORDS=

# 显示环境变量
#隐藏评论者UA
DISABLE_USERAGENT=false
#隐藏评论者归属地
DISABLE_REGION=false
#是否禁止新评论通知
DISABLE_AUTHOR_NOTIFY=false
#头像的代理地址，需先部署waline-tscf-avatar服务
AVATAR_PROXY=
#头像的代理加密密钥，不填写则使用明文代理。需先部署waline-tscf-avatar服务，再配置相同的密钥环境变量。注意：只对QQ头像加密，Gravatar等第三方头像服务会直接返回原始URL。
AVATAR_PROXY_KEY=
#Gravatar 头像的地址，基于 nunjucks 语法
GRAVATAR_STR=https://seccdn.libravatar.org/avatar/{{mail|md5}}ITE_URL=
#用户等级标签 0,10,20,50,100,200
LEVELS=

#安全环境变量
#基于 IP 的评论发布频率限制，单位为秒。设置为 0 不限制
IPQPS=60
# 安全域名 (用逗号分隔)，默认为false
SECURE_DOMAINS=false
#域名安全检查模式。strict: 严格模式，域名必须完全匹配；loose: 宽松模式，支持子域名匹配（默认）。例如：设置 abiscuit.top 时，strict 模式只允许 abiscuit.top，loose 模式还允许 chat.abiscuit.top、api.abiscuit.top 等子域名。
SECURE_DOMAIN_MODE=loose
#Akismet 反垃圾评论服务 Key (默认开启，不用请设置为 false)
AKISMET_KEY=70542d86693e
#评论发布审核开关。开启后评论需要经过管理员审核后才能显示，所以建议在评论框默认文字上提供提示
COMMENT_AUDIT=false
#reCAPTCHA V3 key，须与客户端同时配置
RECAPTCHA_V3_KEY=
#reCAPTCHA V3 secret，服务端使用，不可泄漏
RECAPTCHA_V3_SECRET=
#Turnstile key，须与客户端同时配置
TURNSTILE_KEY=
#Turnstile secret，服务端使用，不可泄漏
TURNSTILE_SECRET=

#Markdown环境变量
#MarkdownIt 配置
MARKDOWN_CONFIG={}
#是否启用高亮
MARKDOWN_HIGHLIGHT=true
#是否启用 Emoji 缩写支持
MARKDOWN_EMOJI=true
#是否启用下角标支持
MARKDOWN_SUB=true
#是否启用上角标支持
MARKDOWN_SUP=true
#解析 TeX 的服务
MARKDOWN_TEX=mathjax
#MathJax 选项
MARKDOWN_MATHJAX={}
#KaTeX 选项
MARKDOWN_KATEX={}

